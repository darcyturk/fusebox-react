@require './colors'
@require '../fonts/proxima'

body
  color $color-gray-6
  font-family 'Proxima'
  font-feature-settings 'pnum'
  font-size 18px
  font-variant-numeric proportional-nums
  line-height 20px
  text-rendering optimizeLegibility
  -webkit-text-size-adjust 100%
  -moz-osx-font-smoothing grayscale

p
  font-size 21px
h1, h2, h3, h4
  margin 0
  padding 0

h1, .h1
  color $color-gray-9
  font-size 34px
  font-weight 300
  letter-spacing -1px
  line-height 1.24
  margin 1em 3em
h2, .h2
  color $color-gray-8
  font-size 34px
  font-weight bold
  line-height 42px
h3, .h3
  font-size 26px
  font-weight bold
h4, .h4
  font-size 21px
  font-weight bold

