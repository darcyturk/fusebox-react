@require '../common/*'

h1
  font-size 3em
  font-weight 800
  line-height: 1.125
  margin-bottom .5em
  text-align center

header
  line-height 1
  nav
    border-bottom 1px solid #000
    margin 0 auto
    overflow hidden
    padding 12px 0

    .logo
      float left
      margin 0

    a
      color #000
      display block
      float right
      font-size 14px
      font-weight bold
      letter-spacing .1px
      margin-left 32px
      text-decoration none
      text-transform uppercase
      &:hover
        color $color-orange-4
